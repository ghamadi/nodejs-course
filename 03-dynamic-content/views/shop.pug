extends layouts/main-layout.pug

block styles
  link(rel='stylesheet' href='/css/forms.css')
  link(rel='stylesheet' href='/css/product.css')

block content
  main
    h1 My Products
    p List of all the products...
    if books.length > 0
      .grid
        each book in books
          article.card.product-item
            header.card__header
              h1.product__title Great Book
            .card__image
              img(src="https://picsum.photos/seed/" + book.title + "/300/300" alt=book.title)
            .card__content
              h2.product__price #{book.price}
              p.product__description #{book.title}
            .card__actions
              button.btn Add to Cart
    else
      h1 No books
